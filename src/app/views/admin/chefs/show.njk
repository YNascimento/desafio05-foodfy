{% extends "admin/layout.njk" %}

{% block head %}

    <title>{{chef.name}}</title>
    <link rel="stylesheet" href="/admin/chefs/show.css">

{% endblock %} 

{% block content %}
    <div class="details-container">
        <div class="edit-box">
            <h2 class="details-h2">Chef: {{chef.name}}</h2>
            <div>
                <a class="adminBtn" href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
            </div>
        </div>

        <div class="presentation-box">
            <img class="presentation-img" src="{{chef.avatar_url}}" alt="{{chef.name}}">
            <h1 class="details-h1">{{chef.name}}</h1>
            <small class="presentation-author">
                {{total_recipes.total}}
                {% if total_recipes.total > 1  %} receitas {%endif%}
                {% if total_recipes.total == 1  %} receita {%endif%}
            </small>
        </div>

        <h2 class="details-h2">Receitas</h2>
        <div class="cards">
            {% for recipe in recipes %}
            <div class="card">
                <img src="{{recipe.image}}" alt="">
                <div>
                    <h4>{{recipe.title}}</h4>
                    <small>Por {{chef.name}}</small>
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
            {% endfor %}
        </div>

    </div>

{% endblock %} 
