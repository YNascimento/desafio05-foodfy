{% extends "user/layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
    <link rel="stylesheet" href="/user/filter.css">
    <link rel="stylesheet" href="/user/paginate.css">
{% endblock %} 

{% block content %}
    <h2 class="card-titulo">Buscando por "{{filter}}"</h2>
    <div class="receitas">                
        <div class="cards">
        {%for recipe in recipes %}
            <div class="card" id="{{recipe.id}}">
                <img class="card-img" src="{{recipe.image}}" alt="{{recipe.title}}">
                <h4 class="card-titulo">{{recipe.title}}</h4>
                <small class="card-autor">por {{recipe.chef_name}}</small>
            </div>
        {% endfor %}
    </div>

    <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}} data-filter={{filter}}></div>

<script src="/user/paginate.js"></script>
<script src="/user/recipes.js"></script>
{% endblock %} 
